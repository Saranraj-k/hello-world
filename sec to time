package simplegamee;

import java.util.Scanner;

public class simplegame {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner scan = new Scanner(System.in);
		int sec=scan.nextInt();
		int p1=sec%60;
		int p2=sec/60;
		int p3=p2%60;
		   int p4=p2/60;
		   System.out.println(p4 + ":" + p3 + ":" + p1);
		

	}

}
